<?xml version="1.0"?>
<ruleset name="PSR2-SS4">

    <description>A modified version of PSR2 that excludes some rules for SilverStripe 4</description>

    <!-- Include the whole PSR-2 standard -->
    <rule ref="PSR2">

        <!--
        - Exclude mandatory namespace
        - Exclude only one class per file
        -->
        <exclude name="PSR1.Classes.ClassDeclaration"/>

        <!--
        - Exclude camel caps methods - e.g. Controller::Form()
        -->
        <exclude name="PSR1.Methods.CamelCapsMethodName"/>

        <!--
        - Excludes camel caps classes - e.g. Page_Controller
        -->
        <exclude name="Squiz.Classes.ValidClassName"/>

    </rule>

</ruleset>
